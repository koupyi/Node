<!-- Cabeçalho da página: título à esquerda + botão "Nova Categoria" à direita -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">Cursos</h1>
  <!-- Link para o formulário de criação -->
  <a href="/cursos/create" class="btn btn-primary">Novo Curso</a>
</div>

<!-- Card Bootstrap para dar um visual "caixa" -->
<div class="card shadow-sm">
  <div class="card-body p-0">
    <!-- Tabela responsiva para exibir os alunos -->
    <table class="table table-hover align-middle mb-0">
      <!-- Cabeçalho da tabela -->
      <thead class="table-light">
        <tr>
          <th>Nome</th>
          <th>Descrição</th>
          <th class="text-end">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% if(Object.keys(cursos).lenght===0) { %>
          <tr>
            <td colspan="2" class="text-center text-muted py-4">
              Nenhum curso encontrada.
            </td>
          </tr>
        <% } %>

        <% for(let id in cursos) { %>
          <tr>
            <td>
              <%= cursos[id].nome %>
            </td>
            <td>
              <%= cursos[id].descricao %>
            </td>
            <td class="text-end">
              <!--link do excluir e do editar-->
              <!-- Link para editar (passa o id na URL) -->
              <a class="btn btn-sm btn-outline-warning" href="/cursos/<%= id %>/edit">
                  Editar
              </a>
              <!-- Link para excluir (passa o id na URL) -->
              <a class="btn btn-sm btn-outline-danger" href="/cursos/<%= id %>/delete"
                onclick="return confirm('Excluir esse curso?')">
                Excluir
              </a>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>
  </div>
</div>