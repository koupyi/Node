<div class="card shadow-sm">
    <div class="card-body">
        <h1 class="h4 mb-3">Editar Professor</h1>
        <form method="POST" action="/professores/<%= id %>/edit" class="row g-3">
            <div class="form-group col-md-8">
                <label class="form-label">Nome</label>
                <input type="text" name="nome" value="<%= professor.nome %>" class="form-control" required>
            </div>
            <div class="form-group mt-2">
                <label for="descricao">Descrição</label>
                <textarea name="descricao" id="descricao" class="form-control" rows="3"><%= professor.descricao %></textarea>
            </div>

            <div class="col-12">
                <a href="/professores" class="btn btn-outline-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Atualizar</button>
            </div>
        </form>
    </div>
</div>